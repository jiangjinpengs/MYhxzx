}

.gondata {
  width: 100%;
  height: 420rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  margin-top: 10rpx;
}

.gondata-comtet {
  width: 718rpx;
  height: 360rpx;
  border-radius: 14rpx;
  position: relative;
}

.gondata-comtet1 {
  width: 718rpx;
  height: 360rpx;
}

.gondata-comtent-top {
  width: 650rpx;
  margin: 40rpx auto;
  display: flex;
}

.gondata-comtent-top-left {
  width: 489rpx;
}

.gondata-comtent-top-left>text {
  display: block;
}

.gondata-comtent-top-left>text:nth-child(1) {
  font-size: 28rpx;
  color: white;
}

.gondata-comtent-top-left>text:nth-child(2) {
  font-size: 54rpx;
  color: #ffe242;
  font-weight: bold;
}

.gondata-comtent-top-right {
  width: 161rpx;
  height: 66rpx;
  margin-top: 4rpx;
