  justify-content: center;
  font-size: 30rpx;
  border-radius: 20rpx;
}

.gondata-comtent-bottom {
  width: 650rpx;
  margin: 40rpx auto;
  display: flex;
  margin-top: 78rpx;
}

.gondata-comtent-bottom>view {
  width: 33.33333333333333333333%;
  display: flex;
  justify-content: center;
}

.gondata-comtent-bottom>view>view>view {
  display: flex;
  justify-content: center;
}

.gondata-comtent-bottom>view>view:nth-child(1) {
  font-size: 28rpx;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.gondata-comtent-bottom>view>view:nth-child(2) {
  color: #4f42ff;
  font-size: 40rpx;
  font-weight: bold;
}

