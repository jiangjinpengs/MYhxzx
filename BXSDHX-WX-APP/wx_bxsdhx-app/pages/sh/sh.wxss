/* pages/Myuserproblem/Myuserproblem.wxss */

page {
  background-color: #f3f5f7;
}

.body {
  background-color: white;
  border-top: 4rpx solid #edeff1;
}

.body-comtent {
  width: 716rpx;
  margin: 0 auto;
}

.body-comtent-title {
  width: 100%;
  font-size: 32rpx;
  color: black;
}

.body-comtent-title-top {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #999;
}

.body-comtent-title-top image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.body-comtent-title-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.body-comtent-title-bottom>view {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 30rpx;
  font-size: 26rpx;
  /* active */
}

.body-comtent-title-bottom>view:active {
  color: red;
}

.body-comtent-title-bottom>view:nth-child(1) {
  width: 50%;
}

.body-comtent-title-bottom>view:nth-child(2) {
  border-left: 1px solid #999;
}

.body-comtent-title-bottom>view:nth-child(3) {
  width: 50%;
}

.body-comtent-list {
  width: 100%;
  border-top: 1rpx solid #ebebeb;
  padding-bottom: 30rpx;
}

.body-comtent-list-title {
  padding-top: 26rpx;
  width: 100%;
  font-size: 30rpx;
  color: black;
}

.body-comtent-list-title {
  padding-top: 26rpx;
  width: 100%;
  font-size: 28rpx;
  color: black;
}

.body-comtent-list-title>view {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

