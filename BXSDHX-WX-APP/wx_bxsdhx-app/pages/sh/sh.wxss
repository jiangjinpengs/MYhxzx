.trtext {
  transition: 0.2s;
  font-size: 36rpx;
}

.body-comtent-list-comtent {
  margin-top: 20rpx;
  width: 100%;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
}

.fooez {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.fooez>view {
  display: flex;
  align-items: center;
  justify-content: center;
}

.fooez image {
  width: 40rpx;
  height: 40rpx;
}

.caozuo {
  display: flex;
  align-items: center;
}

.caozuo>view {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.Release {
  position: fixed;
  top: 20rpx;
  left: 9%;
  width: 80%;
  padding: 10rpx;
  background-color: white;
  color: rgb(207, 204, 204);
  border-radius: 10rpx;
  font-size: 28rpx;
  z-index: 1200;
  -moz-opacity: 1;
  opacity: 1;
}

.Release>view {
  margin: 10rpx 0;
  border-bottom: 1px solid rgb(189, 189, 189);
}

.Release>view:nth-child(3) {
  border-bottom: none;
}
